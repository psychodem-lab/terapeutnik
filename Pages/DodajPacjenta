
import { useState } from "react";
import { Patient } from "@/entities/Patient";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from "@/components/ui/select";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { UserPlus, ArrowLeft, Save, X } from "lucide-react";

export default function DodajPacjenta() {
  const navigate = useNavigate();
  const [isLoading, setIsLoading] = useState(false);
  const [formData, setFormData] = useState({
    imie: "",
    nazwisko: "",
    email: "",
    meeting_link: "",
    google_doc_link: "", // Added new field
    data_urodzenia: "",
    telefon: "",
    notatki: "",
    status: "aktywny",
    miejsce_terapii: ""
  });

  // Define note templates
  const noteTemplates = [
    { label: "Pusta notatka", value: "_pusta_" },
    { label: "Pierwsza wizyta (ogólny)", value: "Cel terapji: ...\nOczekiwania: ...\nObserwacje: ...\nPlan dalszych działań: ..." },
    { label: "Wstępna konsultacja online", value: "Kontakt wstępny: online\nPotrzeby pacjenta: ...\nWarunki techniczne: ...\nSugestie: ..." },
    { label: "Dziecko/Młodzież - pierwsza wizyta", value: "Wiek: ...\nRodzic/opiekun: ...\nZgłaszane problemy (perspektywa dziecka/rodzica): ...\nPlan: ..." },
  ];

  const handleInputChange = (field, value) => {
    setFormData(prev => ({
      ...prev,
      [field]: value
    }));
  };

  const handleSelectTemplate = (templateValue) => {
    const content = templateValue === '_pusta_' ? '' : templateValue;
    setFormData(prev => ({
      ...prev,
      notatki: content // Update the notatki field with the selected template value
    }));
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setIsLoading(true);

    try {
      await Patient.create(formData);
      navigate(createPageUrl("Pacjenci"));
    } catch (error) {
      console.error("Błąd podczas dodawania pacjenta:", error);
    }
    setIsLoading(false);
  };

  const handleCancel = () => {
    navigate(createPageUrl("Pacjenci"));
  };

  return (
    <div className="p-6 bg-gradient-to-br from-slate-50 to-blue-50 min-h-screen">
      <div className="max-w-2xl mx-auto space-y-6">
        <div className="flex items-center gap-4">
          <Button
            variant="outline"
            size="icon"
            onClick={() => navigate(createPageUrl("Pacjenci"))}
            className="hover:bg-blue-50"
          >
            <ArrowLeft className="w-4 h-4" />
          </Button>
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
              <UserPlus className="w-6 h-6 text-blue-600" />
            </div>
            <div>
              <h1 className="text-3xl font-bold text-gray-900">Dodaj nowego pacjenta</h1>
              <p className="text-gray-600 mt-1">Wprowadź dane nowego pacjenta</p>
            </div>
          </div>
        </div>

        <Card className="bg-white/70 backdrop-blur-sm shadow-lg">
          <CardHeader>
            <CardTitle className="flex items-center gap-2">
              <UserPlus className="w-5 h-5 text-blue-600" />
              Dane pacjenta
            </CardTitle>
          </CardHeader>
          <CardContent>
            <form onSubmit={handleSubmit} className="space-y-6">
              <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div className="space-y-2">
                  <Label htmlFor="imie" className="text-sm font-medium">
                    Imię <span className="text-red-500">*</span>
                  </Label>
                  <Input
                    id="imie"
                    value={formData.imie}
                    onChange={(e) => handleInputChange('imie', e.target.value)}
                    placeholder="Wprowadź imię pacjenta"
                    required
                    className="bg-white"
                  />
                </div>

                <div className="space-y-2">
                  <Label htmlFor="nazwisko" className="text-sm font-medium">
                    Nazwisko <span className="text-red-500">*</span>
                  </Label>
                  <Input
                    id="nazwisko"
                    value={formData.nazwisko}
                    onChange={(e) => handleInputChange('nazwisko', e.target.value)}
                    placeholder="Wprowadź nazwisko lub pseudonim"
                    required
                    className="bg-white"
                  />
                </div>

                <div className="space-y-2">
                  <Label htmlFor="email" className="text-sm font-medium">
                    Email
                  </Label>
                  <Input
                    id="email"
                    type="email"
                    value={formData.email}
                    onChange={(e) => handleInputChange('email', e.target.value)}
                    placeholder="adres@email.com"
                    className="bg-white"
                  />
                </div>

                <div className="space-y-2">
                  <Label htmlFor="telefon" className="text-sm font-medium">
                    Numer telefonu
                  </Label>
                  <Input
                    id="telefon"
                    value={formData.telefon}
                    onChange={(e) => handleInputChange('telefon', e.target.value)}
                    placeholder="np. +48 123 456 789"
                    className="bg-white"
                  />
                </div>

                <div className="space-y-2">
                  <Label htmlFor="data_urodzenia" className="text-sm font-medium">
                    Data urodzenia
                  </Label>
                  <Input
                    id="data_urodzenia"
                    type="date"
                    value={formData.data_urodzenia}
                    onChange={(e) => handleInputChange('data_urodzenia', e.target.value)}
                    className="bg-white"
                  />
                </div>
              </div>

              <div className="space-y-2">
                <Label htmlFor="meeting_link" className="text-sm font-medium">
                  Link do spotkania online
                </Label>
                <Input
                  id="meeting_link"
                  type="url"
                  value={formData.meeting_link}
                  onChange={(e) => handleInputChange('meeting_link', e.target.value)}
                  placeholder="https://zoom.us/j/... lub https://teams.microsoft.com/..."
                  className="bg-white"
                />
              </div>

              {/* New field for Google Doc Link */}
              <div className="space-y-2">
                <Label htmlFor="google_doc_link" className="text-sm font-medium">
                  Link do dokumentu Google
                </Label>
                <Input
                  id="google_doc_link"
                  type="url"
                  value={formData.google_doc_link}
                  onChange={(e) => handleInputChange('google_doc_link', e.target.value)}
                  placeholder="https://docs.google.com/document/..."
                  className="bg-white"
                />
              </div>

              <div className="space-y-2">
                <Label htmlFor="miejsce_terapii" className="text-sm font-medium">
                  Miejsce terapii
                </Label>
                <Input
                  id="miejsce_terapii"
                  value={formData.miejsce_terapii}
                  onChange={(e) => handleInputChange('miejsce_terapii', e.target.value)}
                  placeholder="np. Gabinet przy ul. Głównej 15, Warszawa"
                  className="bg-white"
                />
              </div>

              <div className="space-y-2">
                <Label htmlFor="status" className="text-sm font-medium">
                  Status terapii
                </Label>
                <Select
                  value={formData.status}
                  onValueChange={(value) => handleInputChange('status', value)}
                >
                  <SelectTrigger className="bg-white">
                    <SelectValue placeholder="Wybierz status" />
                  </SelectTrigger>
                  <SelectContent>
                    <SelectItem value="aktywny">Aktywny</SelectItem>
                    <SelectItem value="oczekujący">Oczekujący</SelectItem>
                    <SelectItem value="nieaktywny">Nieaktywny</SelectItem>
                    <SelectItem value="zakończona_terapia">Zakończona terapia</SelectItem>
                  </SelectContent>
                </Select>
              </div>

              <div className="space-y-2">
                <Label htmlFor="notatki" className="text-sm font-medium">
                  Wstępne notatki
                </Label>
                {/* Note template selector */}
                <div className="mb-4">
                  <Label htmlFor="template-select" className="text-sm font-medium">
                    Wybierz szablon notatki:
                  </Label>
                  <Select
                    onValueChange={handleSelectTemplate}
                    value="" // Resets the select display after selection
                  >
                    <SelectTrigger id="template-select" className="w-full bg-white">
                      <SelectValue placeholder="Wybierz szablon, aby wypełnić notatki..." />
                    </SelectTrigger>
                    <SelectContent>
                      {noteTemplates.map((template, index) => (
                        <SelectItem key={index} value={template.value}>
                          {template.label}
                        </SelectItem>
                      ))}
                    </SelectContent>
                  </Select>
                </div>
                <Textarea
                  id="notatki"
                  value={formData.notatki}
                  onChange={(e) => handleInputChange('notatki', e.target.value)}
                  placeholder="Wprowadź wstępne notatki o pacjencie..."
                  rows={4}
                  className="bg-white"
                />
              </div>

              <div className="flex gap-3 pt-4">
                <Button
                  type="button"
                  variant="outline"
                  onClick={handleCancel}
                  className="flex-1 hover:bg-gray-50"
                >
                  <X className="w-4 h-4 mr-2" />
                  Anuluj
                </Button>
                <Button
                  type="submit"
                  disabled={isLoading}
                  className="flex-1 bg-blue-600 hover:bg-blue-700"
                >
                  {isLoading ? (
                    "Dodawanie..."
                  ) : (
                    <>
                      <Save className="w-4 h-4 mr-2" />
                      Dodaj pacjenta
                    </>
                  )}
                </Button>
              </div>
            </form>
          </CardContent>
        </Card>
      </div>
    </div>
  );
}
